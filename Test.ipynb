def expxx(cir,cq,tq):
    cir.h(cq)
    cir.h(tq)
    cir.cx(cq,tq)
    cir.rz(0.5,tq)
    cir.cx(cq,tq)
    cir.h(cq)
    cir.h(tq)

expxx(xx,0,1)
xx.draw('mpl')

def expyy(cir,cq,tq):
    
    cir.sdg(cq)
    cir.sdg(tq)
    cir.h(cq)
    cir.h(tq)
    cir.cx(cq,tq)
    cir.rz(0.5,1)
    cir.cx(cq,tq)
    cir.h(cq)
    cir.h(tq)
    cir.s(cq)
    cir.s(tq)

expyy(expyy,0,1)
expyy.draw('mpl')

