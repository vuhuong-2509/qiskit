def expxxyyzz(cir,cq,tq,a):
    cir.cx(cq,tq)
    cir.rx(a/2, cq)
    cir.rz(0.5, tq)
    cir.h(cq)
    cir.cx(cq,tq)
    cir.h(cq)
    cir.s(cq)    
    cir.rz(-0.5, tq)
    cir.cx(cq,tq)
    cir.rx(a/2, cq)
    cir.rx(-a/2, tq)

